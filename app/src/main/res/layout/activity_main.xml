<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <com.vishnumj.facehelper.view.camera.GraphicOverlay
            android:layout_width="match_parent"
            android:id="@+id/overlay_graphic"
            android:layout_height="match_parent" />

    <com.vishnumj.facehelper.view.camera.CameraSourcePreview
            android:layout_width="match_parent"
            android:id="@+id/camera_source_preview"
            android:layout_height="match_parent" />

    <Button
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button_add_face"
            android:layout_width="wrap_content"
            android:text="Add Face"
            android:onClick="addFace"
            android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>