<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrainingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faceregistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.activities.training.FaceRegistrationActivity">


        <com.wonderkiln.camerakit.CameraView
                android:id="@+id/view_camera_kit_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:keepScreenOn="true"
                android:orientation="horizontal"
                app:ckFacing="front"
                app:ckFlash="off"
                app:ckFocus="continuous"
                app:ckLockVideoAspectRatio="true"
                app:ckPinchToZoom="false"
                app:ckVideoQuality="max480p"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.vishnumj.facehelper.sample.widgets.CircleOverlayView
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="match_parent" />

        <include
                android:id="@+id/layout_count_down_timer"
                layout="@layout/layout_count_down_timer" />

        <include
                android:id="@+id/layout_progress_circle"
                layout="@layout/layout_progress_circle" />

        <ImageView
                android:id="@+id/image_action_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_action_notice"
                app:layout_constraintBottom_toTopOf="@+id/tv_action_notice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView

                android:id="@+id/tv_action_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Please keep your face inside the preview circle at all times to ensure proper training and recognition"
                android:textColor="@color/grey_50"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>